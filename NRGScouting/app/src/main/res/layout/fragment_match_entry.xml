<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/matchEntry"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.competitionapp.nrgscouting.MatchEntry">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Number: "
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginTop="0dp"
            />

        <EditText
            android:id="@+id/matchNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:hint="(Type here)"
            android:inputType="number"

            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

    <Spinner
        android:id="@+id/teamPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/spinnerItems"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Offensive Strategy"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />

    <CheckBox
        android:id="@+id/baseline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crossed Baseline"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Gears Retrieved:"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/plusAutoGears"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/colorAccent"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/autoGearsRetrieved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:text="0"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/minusAutoGears"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/colorAccent"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"

                />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="KiloPascals of Balls Scored in Auto:"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plusAutoBallsShot"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorAccent"
            android:elevation="0dp"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/autoBallsShot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:inputType="numberDecimal"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" />


        <Button
            android:id="@+id/minusAutoBallsShot"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorAccent"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tele-Op Gears Retrieved:"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plusGears"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorAccent"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/gearsRetrieved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:inputType="number"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/minusGears"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorAccent"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="KiloPascals of Balls Scored in Tele-Op:"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plusBallsShot"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorAccent"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ballsShot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:textAlignment="center"
            android:text="0"
            android:inputType="numberDecimal"
            android:textColor="@color/colorPrimaryDark" />


        <Button
            android:id="@+id/minusBallsShot"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorAccent"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Gracious Playstyle Rating:"
        android:textSize="16sp"
        android:textStyle="normal" />

    <RatingBar
        android:id="@+id/sportsmanship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="2.5"
        android:stepSize="0.5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Defensive Strategy"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Defensive Strategy Strength:"
        android:textSize="16sp" />
    
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/defensiveStrategyStrength"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >

        <RadioButton
            android:id="@+id/defensiveStrategyWeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weak"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            />
        
        <RadioButton
            android:id="@+id/defensiveStrategyAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            />

        <RadioButton
            android:id="@+id/defensiveStrategyStrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strong"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            />
        
    </RadioGroup>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End-Game"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />

    <CheckBox
        android:id="@+id/death"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Death"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_marginTop="5dp"/>

    <CheckBox
        android:id="@+id/ropeClimb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Climbed rope"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cardyellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Received Yellow Card"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cardred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Received Red Card"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Robot Malfunctions"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />

    <CheckBox
        android:id="@+id/chain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chain Problems"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_marginTop="5dp"/>

    <CheckBox
        android:id="@+id/disconnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disconnectivity"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_marginTop="5dp"/>

    <CheckBox
        android:id="@+id/otherProblems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:backgroundTint="@color/colorAccent"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:clickable="true"
            android:onClick="s"/>

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:backgroundTint="@color/colorAccent"
            android:text="Back"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>
</ScrollView>