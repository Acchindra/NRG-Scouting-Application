<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Chronometer

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainTimer"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/colorLightGray"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:layout_marginTop="70dp"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:progress="100"
        android:progressTint="@color/colorAccent"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="130dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ally_switch"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:drawableTint="@color/colorWhite"
                android:drawableTop="@drawable/ic_switch"
                android:gravity="center_horizontal"
                android:text="Claimed Ally Switch"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/claimed_scale"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:drawableTint="@color/colorWhite"
                android:drawableTop="@drawable/ic_scale"
                android:gravity="center_horizontal"
                android:text="Claimed Scale"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/opp_switch"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:drawableTint="@color/colorWhite"
                android:drawableTop="@drawable/ic_switch"
                android:gravity="center_horizontal"
                android:text="Claimed Opp. Switch"
                android:textColor="@color/colorWhite" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boost_used"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:drawableTint="@color/colorWhite"
                android:drawableTop="@drawable/ic_boost_powerup"
                android:gravity="center_horizontal"
                android:text="Boost Used"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/cube_dropped"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:drawableTint="@color/colorWhite"
                android:drawableTop="@drawable/ic_drop_cube"
                android:gravity="center_horizontal"
                android:text="Cube Dropped"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/force_used"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorLightGray"
                android:drawableTint="@color/colorWhite"
                android:drawableTop="@drawable/ic_force_powerup"
                android:gravity="center_horizontal"
                android:text="Force Used"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/climb_start"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:drawableTint="@color/colorWhite"
                android:drawableTop="@drawable/ic_climb"
                android:gravity="center_horizontal"
                android:text="Climb Start"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/time_start"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:drawableTint="@color/colorWhite"
                android:drawableTop="@drawable/ic_timer"
                android:gravity="center_horizontal"
                android:text="Time Start"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>